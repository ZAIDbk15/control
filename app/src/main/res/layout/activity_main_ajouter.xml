<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_ajouter"
    >

    <EditText
        style="@style/edite_style1"
        android:hint="Tapez le nom de la societe"
        android:layout_alignParentTop="true"
        android:id="@+id/txt_nom"/>
    <EditText
        style="@style/edite_style1"
        android:hint="Tapez le secteur d'activite'"
        android:layout_below="@id/txt_nom"
        android:id="@+id/txt_secteur"/>
    <EditText
        style="@style/edite_style1"
        android:hint="Tapez le nombre d'employe"
        android:layout_below="@id/txt_secteur"
        android:id="@+id/txt_nbEmploye"/>

    <Button
        android:id="@+id/btn_addNewS"
        style="@style/btn_style2"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nbEmploye"
        android:layout_marginTop="82dp"
        android:text="@string/Enregistr" />

    <Button
        android:id="@+id/btn_cancelNewS"
        style="@style/btn_style2"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn_addNewS"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@id/btn_addNewS"
        android:text="@string/Anuuler" />

</RelativeLayout>